/* pages/bcards/bcards.wxss */
.banner{
  text-align: center;
  width: 640rpx;
  height: 240rpx;
  position: relative;
  display: flex;
  justify-content: center;
  /* border-top:1rpx solid #fff; */
}
.banner-img{
  display: block;
}
.goto-editer{
  display: block;
  width: 262rpx;
  height: 72rpx;
  position: absolute;
  margin-top: 80rpx;
  z-index: 10
}
.title {
  width: 100%;
  height: 46px; 
  display: flex;
  align-items:center;
}
.title-word {
  line-height: 46px;
  margin-left: 15px;
  font-size: 15pt;
}
.view-margin{
  margin-top: 10px;
}
.line {
  background-color: rgb( 255, 144, 64 );
  width: 12rpx;
  height: 40rpx;
  border-radius: 5px;
}
.intro{
  width: 640rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: #eff7ff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.log{
  width: 140rpx;
  height: 140rpx;
  border-radius:70rpx;
  background: #888;
  margin: 0 10rpx;
  flex-shrink:0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding:0 20rpx 0 3em;
   
}
.info{
  text-indent: -3em; 
  font-size: 11pt;
}
button{
  margin-top: 40rpx;
  width: 640rpx;
}