/* pages/bcards/bcards.wxss */
.banner{
  text-align: center;
  width: 640rpx;
  height: 240rpx;
  position: relative;
  display: flex;
  justify-content: center;
  /* border-top:1rpx solid #fff; */
}
.banner-img{
  display: block;
}
.goto-editer{
  display: block;
  width: 262rpx;
  height: 72rpx;
  position: absolute;
  margin-top: 80rpx;
  z-index: 10
}
.title {
  width: 100%;
  height: 46px; 
  display: flex;
  align-items:center;
}
.title-word {
  /* line-height: 46px; */
  margin-left: 30rpx;
  font-size: 1rem;
}
.view-margin{
  margin-top: 10px;
}
.line {
  background-color: rgb( 255, 144, 64 );
  width: 12rpx;
  height: 40rpx;
  border-radius: 5px;
}
.container-intro{
  width: 100%;
  padding: 0;
}
.intro{
  width: 100%;
  height: 160rpx;
  border-radius: 80rpx;
  background: #eff7ff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.log{
  width: 124rpx;
  height: 124rpx;
  border-radius:70rpx;
  margin-left: 20rpx;
  flex-shrink:0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding:0 20rpx 0 3em;
   
}
.info{
  text-indent: -3em; 
  font-size: 0.8rem;
  margin: 2rpx 0;
}
button{
  margin-top: 40rpx;
  width: 640rpx;
}
.footbtn{
  width: 100%;
  /* position: fixed; */
  bottom: 0;
  flex-direction: row;
  flex-wrap:nowrap;
}
navigator{
  display: inline;
}
.inline-block{
  display: inline-block;
  width: 50%;
  height: 100%;
  line-height: 46px;
  font-size:18px;
  text-align: center;
  color: #fff;
}
.container-img{
  pad: 0 30rpx;
}
image{
  width: 640rpx;
}
.reg-btn{
  background-color: rgb( 255, 57, 57 );
}
.login-btn{
  background-color: rgb( 255, 118, 118 );
}