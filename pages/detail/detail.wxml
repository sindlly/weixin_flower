<view class='wapper'>
  <view class=''>
    <form bindsubmit="formSubmit">
      <view class="panel">
        <view class='bline'>
          <input name="name" value="{{name}}" type="number" placeholder="花店名字" />
        </view>
        <view class='bline'>
          <input name="address" type="text" value="{{address}}" placeholder="花店地址" />
        </view>
         <view class="bline"><input name="contact" type="number" placeholder="花店联系电话" value="{{contact}}"/></view>
         <view class=""><input name="url" type="text" placeholder="花店公众号url（选填）" value="{{url}}" /></view>

      </view>
      <view>
        <button type='warn' formType="submit">确认保存</button>
        <view><button class="btn" bindtap='goto'>如何获取公众号url</button></view>
      </view>
    </form>
    
  </view>
</view>