.container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
}

.printer-qr, .printer-test, .printer-reprint {
  margin-bottom: 40rpx;
  text-align: center;
}

.printer-tag {
  text-align: center;
  margin-top: 10rpx;
}

.printer-status {
  margin-bottom: 40rpx;
  margin-top: 10rpx;
}

.printer-btnstatus {
  border: none !important;
}

.image-print {
  width: 140rpx;
  height: 140rpx;
}

.print-options {
  display: block;
  margin-top: 5px;
}

.printer-buy {
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  text-align: center;
  height: 100rpx;
  background-color: #ff3630;
  line-height: 100rpx;
  color: #fff;
}

text {
  color: #333;
}
