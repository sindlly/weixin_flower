/* pages/greetingcard/greetingcard.wxss */

page {
   height: 100%;
  display: flex;
  justify-content: center;
  align-items: center; 
  overflow: hidden;
}

.bg-img {
  width: 100%;
  position: fixed;
  z-index: -10;
}

.container {
  width: 100%;
  justify-content: center;
  align-items: center;
}

.box {
  width: 560rpx;
  height: 100%;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}
.box-bg{
  width: 560rpx;
  height: 100%;
  z-index: -10;
}
.box-left {
  width: 310rpx;
  position: absolute;
  left: 0rpx;
}

.open {
  width: 460rpx;
  position: absolute;
  right: 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.open-img{
  width: 100%;
   position: absolute; 
}
.origin{
  align-self: center;
  width: 200rpx;
  z-index: 5;
  color: #fff;  
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-left: 200rpx;
}
.header{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #487
}
.time{
  font-size: 1rem;
}
.user{
  font-size: .7rem;
}
.action{
  font-size: .7rem;
}
.content{
  height: 100%;
  position: absolute;
  align-self: center;
  justify-content: center;
  flex-shrink: 0;
  top:0;
  z-index: 1;
    /* transform: scale(.6)   */
}
.panle{
  width: 90%;
  /* min-height: 300px; */
  border-radius: 10px;
  background: rgba(255, 255, 255, .9);
  /* margin-top:30px; */
  box-sizing:border-box;
  padding: 20px;
  color: #888;
}
.img{
  width: 100%;
}
video{
  width: 100%;
  height: 360rpx;
}
.video-bg{
  width: 100%;
  height: 360rpx;
  background: #fff;
}
text{
  margin-top: 20rpx;
  width: 100%;
}
.audio-area{
  width: 100%;
  height: 110rpx; 
  margin-top:40rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, .9);
  display: flex;
  justify-content:flex-start;
  align-items: center;
}
.audio-text{
  font-size:14pt;
  margin-left: 50rpx;
  color: #888;
  display: flex;
  justify-content:center;
  align-items: center;
}
.audio-area image{
  width: 111rpx;
  height: 110rpx;
}
.audio-text{
  height: 110rpx; 
}

