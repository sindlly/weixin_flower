/* pages/greetingcard/greetingcard.wxss */

page {
   height: 100%;
  display: flex;
  justify-content: center;
  align-items: center; 
  overflow: hidden;
}

.bg-img {
  width: 100%;
  position: fixed;
  z-index: -10;
}

.container {
  width: 100%;
  justify-content: center;
  align-items: center;
}

.box {
  width: 560rpx;
  height: 100%;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}
.box-bg{
  width: 560rpx;
  height: 100%;
  z-index: -10;
}
.box-left {
  width: 310rpx;
  position: absolute;
  left: 0rpx;
}

.open {
  width: 460rpx;
  position: absolute;
  right: 2rpx;
  /* top: -20rpx; */
}
.content{
  height: 100%;
  position: absolute;
  align-self: center;
  justify-content: center;
  flex-shrink: 0;
  top:0;
  z-index: 1;
   transform: scale(.6) 
}
.panle{
  width: 90%;
  /* min-height: 300px; */
  border-radius: 10px;
  background: rgba(255, 255, 255, .9);
  /* margin-top:30px; */
  box-sizing:border-box;
  padding: 20px;
  color: #888;
}
.img{
  width: 100%;
}
text{
  margin-top: 10rpx;
  width: 100%;
}

