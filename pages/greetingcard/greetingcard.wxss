/* pages/greetingcard/greetingcard.wxss */

page {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow-x: hidden;
}

.bg-music {
  width: 60rpx;
  height: 60rpx;
  border-radius: 25rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 30;
}

.bg-img {
  width: 100%;
  position: fixed;
  z-index: -10;
}

.container {
  width: 100%;
  justify-content: center;
  align-items: center;
}

.box {
  width: 560rpx;
  height: 100%;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}

.box-bg {
  width: 560rpx;
  height: 100%;
  z-index: -10;
}

.box-left {
  width: 326rpx;
  position: absolute;
  margin-top: 1rpx;
  left: 0rpx;
}

.open {
  width: 450rpx;
  position: absolute;
  right: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.open-center {
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  left: 26rpx;
  z-index: 11;
}

.open-btn {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  left: 0;
  z-index: 10;
  animation: mymove 20s infinite linear;
}

@keyframes mymove {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.open-img {
  width: 100%;
  position: absolute;
}

.origin {
  align-self: center;
  width: 200rpx;
  z-index: 5;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-left: 200rpx;
}

.header {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.time {
  font-size: 1rem;
}

.user {
  font-size: 0.7rem;
}

.action {
  font-size: 0.7rem;
}

.content {
  height: 100%;
  overflow-x: hidden;
  position: absolute;
  align-self: center;
  justify-content: center;
  flex-shrink: 0;
  top: 0;
  z-index: 1;
  transform: scale(0.6);
}

.panle {
  width: 100%;
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.9);
  margin-top: -100px;
  box-sizing: border-box;
  padding: 20px;
  color: rgb(51, 51, 51);
}

.img {
  width: 100%;
}

video {
  width: 100%;
  height: 360rpx;
}

.video-bg {
  width: 100%;
  height: 360rpx;
  background: #000;
}

.text {
  margin-top: 30rpx;
  width: 100%;
  text-align: center;
}

.audio-area {
  width: 100%;
  height: 110rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.audio-text {
  font-size: 14pt;
  margin-left: 50rpx;
  color: #888;
  display: flex;
  justify-content: center;
  align-items: center;
}

.audio-area image {
  width: 111rpx;
  height: 110rpx;
}

.audio-text {
  height: 110rpx;
}

.foot {
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.store {
  display: flex;
  align-items: center;
}

.name {
  margin-left: 10rpx;
  font-size: 0.8em;
}

.log {
  width: 70rpx;
  height: 70rpx;
  border-radius: 40rpx;
}

.preview-btn {
  width: 200rpx;
  height: 95rpx;
}

.save-btn {
  width: 200rpx;
  height: 95rpx;
  margin-left: 0;
  margin-right: 0;
  border-radius: 0;
  padding-right: 0;
  padding-left: 0;
  background-color: rgba(255, 255, 255, 0);
}

.save-btn::after {
  border-radius: 0;
  border: none;
}

.cover {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 8888;
}

.share {
  position: absolute;
  width: 100%;
  background-color: #eee;
  bottom: 0;
  z-index: 9999;
}

.share .share-choice {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.share .share-choice .choice-item {
  margin: 0;
  padding: 0;
  margin-left: 40rpx;
  background: none;
  border: 0;
}

.choice-item::after {
  border: none;
}

.share .share-choice .choice-item view {
  display: flex;
  flex-direction: column;
}

.choice-item .choice-image {
  width: 80rpx;
  height: 80rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.choice-text {
  margin-top: 10rpx;
  height: 30rpx;
  width: 100%;
  font-size: 0.6rem;
  text-align: center;
  line-height: 30rpx;
  color: rgba(0, 0, 0, 0.7);
}

.share .share-quit {
  display: inline-block;
  width: 100%;
  height: 100rpx;
  color: #ff7676;
  font-size: 13pt;
  background-color: #fff;
  line-height: 100rpx;
  text-align: center;
}

.code-preview {
  position: absolute;
  width: 80%;
  height: 60%;
  background-color: #fff;
  z-index: 9999;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code-preview .code-image {
  width: 320rpx;
  height: 320rpx;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}

.code-preview text {
  font-size: 13pt;
  padding: 40rpx 40rpx;
  text-align: center;
}

.controls {
  height: 100%;
  background-color: #fff;
}

.controls .play {
  height: 100%;
  display: flex;
  align-items: center;
}

.video-img {
  width: 60%;
  height: 70%;
  margin: 0 auto;
  padding-top: 20rpx;
}
