.container {
  display: flex;
  justify-content: flex-start;
  height: 100vh;
  width: 100vw;
  text-align: left;
  background-color: #f2f2f2;
  position: relative;
}

.order-commodity, .order-address, .order-number, .order-count, .order-sum {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-start;
  border-bottom: 2rpx solid #eee;
  background-color: #fff;
  padding: 2vh;
  margin-bottom: 1vh;
}

.order-address {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.address-left .position-logo {
  width: 40rpx;
  height: 52rpx;
}

.address-middle {
  width: 65vw;
}

.address-right {
  width: 15vw;
  text-align: right;
  color: #999;
}

.address-contact {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.address-contact text {
  color: #242424;
  font-size: 12pt;
}

.order-number button {
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: silver;
  padding: 0;
}

.order-number .count-value {
  height: 64rpx;
  line-height: 64rpx;
  display: inline-block;
  vertical-align: top;
  padding: 0 20rpx;
}

.order-count, .order-number, .order-sum {
  justify-content: space-between;
  align-items: center;
}

.order-sum {
  padding: 0;
  font-size: 13pt;
  margin: 0;
  width: 100vw;
  position: absolute;
  bottom: 0;
  left: 0;
  border: none;
}

.order-sum .sum-submit {
  height: 100rpx;
  background-color: #ff3630;
  line-height: 100rpx;
  padding: 0 12vw;
  color: #fff;
}

.order-sum .sum-price {
  margin-left: 2vh;
}

/* 商品相关 */

.image-item {
  width: 200rpx;
  height: 200rpx;
}

.item-container-right {
  margin-left: 2vw;
  width: 70vw;
}

.item-title {
  display: block;
  font-size: 13pt;
  color: #333;
}

.item-subtitle {
  display: block;
  color: #666;
  font-size: 11pt;
  margin-top: 10rpx;
}

.container-right-bottom {
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.item-container-price {
  display: inline-block;
  width: 35vw;
}

.item-container-pay {
  display: inline-block;
  width: 15vw;
}

.item-price {
  color: #ff3939;
  font-size: 13pt;
}

.item-old-price {
  margin-left: 2vw;
  font-size: 11pt;
  color: silver;
}

.item-payed {
  display: block;
  font-size: 11pt;
  color: silver;
}

.item-count {
  font-size: 11pt;
  float: right;
  color: silver;
}

.smaller-font {
  font-size: 0.8rem;
  color: #999;
}
