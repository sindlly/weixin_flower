.container {
  display: flex;
  justify-content: flex-start;
  height: 100vh;
  width: 100vw;
  text-align: left;
  background-color: #eee;
  position: relative;
}

.order-commodity, .order-address, .order-number, .order-count, .order-sum {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-start;
  border-bottom: 1px solid #eee;
  background-color: #fff;
  padding: 2vh 2vh 1vh 2vh;
  margin-bottom: 1vh;
}
.order-address {
  flex-direction: row;
  justify-content: space-between
}
.address-contact {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.order-number button {
  display: inline-block;
  width: 32px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  color: silver;
  padding: 0;
}

.order-number .count-value {
  height: 32px;
  line-height: 32px;
  display: inline-block;
  vertical-align: top;
  padding: 0 10px;
}

.order-count, .order-number, .order-sum {
  justify-content: space-between;
  align-items: center;
}
.order-sum {
  padding: 0;
  font-size: 12pt;
  margin: 0;
  width: 100vw;
  position: absolute;
  bottom: 0;
}
.order-sum .sum-submit {
  height: 50px;
  background-color: red;
  line-height: 50px;
  padding: 0 12vw;
  color: #fff;
}
.order-sum .sum-price {
  margin-left: 2vh
}

/* 商品相关 */

.item-container-left {
  width: 25vw;
}

.item-container-right {
  margin-left: 1vw;
  width: 70vw;
}

.image-item {
  width: 20vw;
}

.item-title {
  display: block;
  font-size: 13pt;
}

.item-subtitle {
  display: block;
  color: silver;
  font-size: 11pt;
}

.container-right-bottom {
  margin-top: 1vh;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}

.item-container-price {
  display: inline-block;
  width: 35vw;
}

.item-container-pay {
  display: inline-block;
  width: 15vw;
}

.item-price {
  color: brown;
  font-size: 13pt;
}

.item-old-price {
  margin-left: 2vw;
  font-size: 11pt;
  color: silver;
}

.item-payed {
  display: block;
  font-size: 11pt;
  color: silver;
}

.item-count {
  font-size: 11pt;
  float: right;
  color: silver;
}

.smaller-font {
  font-size: 11pt;
  color: silver;
}
