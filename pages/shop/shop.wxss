.container {
  display: flex;
  justify-content: flex-start;
  height: 100vh;
  text-align: left;
  background-color: #eee
}

.item-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: flex-start;
  border-bottom: 1px solid #eee;
  background-color: #fff;
  padding: 2vh 2vh 1vh 2vh 
}
.item-container-left {
  width: 25vw;
}
.item-container-right {
  margin-left: 1vw;
  width: 70vw;
}
.image-item {
  width: 20vw;
}

/* 右上 */
.item-title {
  display: block;
  font-size: 13pt
}
.item-subtitle {
  display: block; 
  color: silver; 
  font-size: 11pt
}

/* 右下 */
.container-right-bottom {
  margin-top: 1vh;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.item-container-price {
  display: inline-block;
  width: 35vw;
}
.item-container-pay {
  display: inline-block;
  width: 15vw;  
}
.item-price {
  color: brown;
  font-size: 13pt;
}
.item-old-price {
  margin-left: 2vw;
  font-size: 11pt;
  color: silver  
}
.item-payed {
  display: block;
  font-size: 11pt;
  color: silver 
}
.item-buy {
  font-size: 11pt;
  padding: 5px 10px;
  background-color: crimson;
  color: #fff;
  border-radius: 5px
}