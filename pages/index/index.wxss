/**index.wxss**/

.container {
  /* height: 750px; */
  justify-content:flex-start;
  /* padding: 10px; */
  align-items:flex-start;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 46px; 
  display: flex;
  align-items:center;
}
.log-img{
  width: 34px;
  height: 46px;
}
.title-word {
  line-height: 46px;
  margin-left: 15px;
  font-size: 15pt;
  font-weight: bold;
}
video{
  width:100%;
  margin-top:10px;
  border-radius: 5px !important;
}
.view-margin{
  margin-top: 10px;
}
.line {
  background-color: rgb( 255, 144, 64 );
  width: 6px;
  height: 25px;
  border-radius: 5px;
}
.contact{
   width: 100%; 
  padding-left: 21px;
  /* padding-right: 48px; */
  display: flex;
  flex-direction: column;
  align-items:flex-start;
}
.contact-detail{
  width: 85%;
  font-size: 12pt;
  font-family: "PingFangSC";
  /* color: rgb( 102, 102, 102 ); */
  color:grey;
  border-bottom: 1px dashed gray;
  line-height: 40px;
  
}
.detail-black{
  color:black;
}
.partner-list{
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  margin-top: 10px;
}
.img-list{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background:gray;
  
}
.footbtn{
  width: 100%;
  height: 46px;
  flex-direction: row;
  flex-wrap:nowrap;
  margin-top: 20px;
}
.inline-block{
  display: inline-block;
  width: 50%;
  height: 100%;
  line-height: 46px;
  font-size:18px;
  text-align: center;
  color: #fff;
}
.reg-btn{
  background-color: rgb( 255, 57, 57 );
}
.login-btn{
  background-color: rgb( 255, 118, 118 );
}
